doctype html
html(lang="en")
  head
    title Bananagrams!
    meta(charset='utf-8')
    link(rel="stylesheet", href="/static/main.css")
    link(rel="icon", type="image/x-icon", href="/static/favicon.ico")
  body
    center
      p Bananagrams solver!
      input(type="number", value="21", id="numChars")
      input(type="button", value="generate characters", id="btn")
      br
      p(class="length") min word length: &nbsp;
      input(id="minLength", type="number", value="3") 
      
      br
      p(class="length") max word length: &nbsp;
      input(id="maxLength", type="number", value="5") 
      
      br

      p(class="note") note: higher max word length increases computation time
      input(type="text" placeholder="characters" id="chars", style="width: 20%;")
      input(type="button", value="solve!", id="btnSolve")
      p(id="solution")
      a(class='footer' href="https://github.com/samdevo/bananagrams") Link to source code
      script(src="/static/main.js")